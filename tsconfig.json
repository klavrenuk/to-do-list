{
  "compilerOptions":
  {
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist",
    "esModuleInterop": true,
    "lib": [
      "es6",
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "moduleResolution": "node",
    "strict": true,
    "noEmitOnError": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "jsx": "react-jsx"
  },
  "include": ["./src"],
  "exclude": ["node_modules"],
  "stylePreprocessorOptions": {
    "includePaths": [
      "css"
    ]
  },
  "paths": {
    "@core": ["src"],
    "@/*": [
      "./src/*"
    ]
  },
  "extends": "./tsconfig.paths.json"
}
